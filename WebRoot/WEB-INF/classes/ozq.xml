<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	
	<bean id="OzqAction" class="action.OzqAction" scope="prototype">
		<property name="ozqBo" ref="ozqBo"></property>
	</bean>
	
	<bean id="ozqBo" class="bo.OzqBo">
		<property name="OzqDao" ref="OzqDao"></property>
	</bean>
	
	<bean id="OzqDao" class="dao.OzqDao">
		<property name="template">
			<ref bean="o_hibernateTemplate" />
		</property>
	</bean>

	<!-- 配置hibernateTemplate -->
	<bean id="o_hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	
	
	<!-- 配置了事务代理才能执行对数据库的操作 -->
	<!--将事务管理交给spring，注册一个bean -->
	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<!-- 事务处理的一个代理 -->
	<bean id="baseTxProxy" lazy-init="true"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="adddeathcertificate">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	
</beans>